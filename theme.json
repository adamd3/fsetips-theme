{
	"$schema": "https://schemas.wp.org/wp/6.7/theme.json",
	"version": 3,
	"settings": {
		"color": {
			"gradients": [
				{
					"gradient": "linear-gradient(135deg, var(--wp--preset--color--primary) 0%, var(--wp--preset--color--accent) 100%)",
					"name": "Hero Gradient",
					"slug": "hero-gradient"
				},
				{
					"gradient": "linear-gradient(180deg, var(--wp--preset--color--background) 0%, var(--wp--preset--color--light) 100%)",
					"name": "Subtle Background",
					"slug": "subtle-gradient"
				}
			],
			"palette": [
				{
					"color": "#2563eb",
					"name": "Primary",
					"slug": "primary"
				},
				{
					"color": "#1e293b",

					"name": "Secondary",
					"slug": "secondary"
				},
				{
					"color": "#3b82f6",
					"name": "Accent",
					"slug": "accent"
				},
				{
					"color": "#ffffff",
					"name": "Background",
					"slug": "background"
				},
				{
					"color": "#1e293b",
					"name": "Text",
					"slug": "text"
				},
				{
					"color": "#f1f5f9",
					"name": "Light",
					"slug": "light"
				},
				{
					"color": "#0f172a",
					"name": "Dark",
					"slug": "dark"
				},
				{
					"color": "#1e293b",
					"name": "Code Background",
					"slug": "code-bg"
				},
				{
					"color": "#e2e8f0",
					"name": "Code Text",
					"slug": "code-text"
				},
				{
					"color": "#f97316",
					"name": "Brand Orange",
					"slug": "brand-orange"
				},
				{
					"color": "#ea580c",
					"name": "Brand Orange Hover",
					"slug": "brand-orange-600"
				}
			]
		},
		"custom": {
			"spacing": {
				"outer": "var(--wp--preset--spacing--40)"
			},
			"typography": {
				"line-height": {
					"normal": 1.5,
					"relaxed": 1.75,
					"tight": 1.2
				}
			}
		},
		"layout": {
			"contentSize": "800px",
			"wideSize": "1100px"
		},
		"spacing": {
			"blockGap": true,
			"defaultSpacingSizes": false,
			"margin": true,
			"padding": true,
			"spacingSizes": [
				{
					"name": "Zero",
					"slug": "0",
					"size": "0"
				},
				{
					"name": "1",
					"size": "1.25rem",
					"slug": "20"
				},
				{
					"name": "2",
					"size": "1.875rem",
					"slug": "30"
				},
				{
					"name": "3",
					"size": "2.5rem",
					"slug": "40"
				},
				{
					"name": "4",
					"size": "3.125rem",
					"slug": "50"
				},
				{
					"name": "5",
					"size": "3.75rem",
					"slug": "60"
				}
			],
			"units": [
				"px",
				"em",
				"rem",
				"vh",
				"vw",
				"%"
			]
		},
		"typography": {
			"defaultFontSizes": false,
			"fontFamilies": [
				{
					"fontFamily": "Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen-Sans, Ubuntu, Cantarell, 'Helvetica Neue', sans-serif",
					"name": "Inter",
					"slug": "inter"
				},
				{
					"fontFamily": "JetBrains Mono, Monaco, 'Courier New', monospace",
					"name": "JetBrains Mono",
					"slug": "mono"
				},
				{
					"fontFamily": "'Roboto Flex', sans-serif",
					"name": "Roboto Flex",
					"slug": "roboto"
				},
				{
					"fontFamily": "'Plus Jakarta Sans', sans-serif",
					"name": "Plus Jakarta Sans",
					"slug": "plus-jakarta"
				}
			],
			"fontSizes": [
				{
					"name": "Small",
					"size": "0.875rem",
					"slug": "small"
				},
				{
					"name": "Base",
					"size": "1rem",
					"slug": "base"
				},
				{
					"name": "Large",
					"size": "1.125rem",
					"slug": "lg"
				},
				{
					"name": "XL",
					"size": "1.25rem",
					"slug": "xl"
				},
				{
					"name": "2XL",
					"size": "1.5rem",
					"slug": "2xl"
				},
				{
					"name": "3XL",
					"size": "1.875rem",
					"slug": "3xl"
				},
				{
					"name": "4XL",
					"size": "2.25rem",
					"slug": "4xl"
				},
				{
					"name": "5XL",
					"size": "3rem",
					"slug": "5xl"
				}
			]
		}
	},
	"styles": {
		"blocks": {
			"core/button": {
				"border": {
					"radius": "0.5rem"
				},
				"color": {
					"background": "var(--wp--preset--color--brand-orange)",
					"text": "var(--wp--preset--color--background)"
				},
				"spacing": {
					"padding": {
						"bottom": "0.75rem",
						"left": "1.5rem",
						"right": "1.5rem",
						"top": "0.75rem"
					}
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--base)",
					"fontWeight": "600"
				}
			},
			"core/code": {
				"color": {
					"background": "var(--wp--preset--color--code-bg)",
					"text": "var(--wp--preset--color--code-text)"
				},
				"spacing": {
					"padding": {
						"bottom": "1.25rem",
						"left": "1.5rem",
						"right": "1.5rem",
						"top": "1.25rem"
					}
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--mono)",
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/navigation-link": {
				"color": {
					"text": "var(--wp--preset--color--background)"
				}
			},
			"core/post-terms": {
				"elements": {
					"link": {
						"border": {
							"radius": "9999px"
						},
						"color": {
							"background": "var(--wp--preset--color--accent)",
							"text": "var(--wp--preset--color--background)"
						},
						"spacing": {
							"padding": {
								"bottom": "0.25rem",
								"left": "0.75rem",
								"right": "0.75rem",
								"top": "0.25rem"
							}
						},
						"typography": {
							"fontSize": "0.875rem",
							"fontWeight": "500"
						}
					}
				}
			},
			"core/list-item": {
				"spacing": {
					"margin": {
						"left": "1.5rem"
					}
				}
			},
			"core/post-title": {
				"typography": {
					"fontSize": "3.5rem",
					"fontWeight": "800",
					"lineHeight": "var(--wp--custom--typography--line-height--tight)",
					"fontFamily": "var(--wp--preset--font-family--roboto)"
				},
				"spacing": {
					"margin": {
						"bottom": "2rem"
					}
				}
			},
			"core/group": {
				"spacing": {
						"margin": {
							"top": "0",
							"bottom": "0"
						}
					}
			},
			"core/template-part": {
				"spacing": {
					"margin": {
						"top": "0",
						"bottom": "0"
					}
				}
			},
			"core/post-content": {
                "elements": {
                    "link": {
                        "color": {
                            "text": "var(--wp--preset--color--brand-orange)"
                        },
                        "typography": {
                            "textDecoration": "underline"
                        },
                        ":hover": {
                            "color": {
                                "text": "var(--wp--preset--color--brand-orange-600)"
                            },
                            "typography": {
                                "textDecoration": "none"
                            }
                        }
                    }
                }
            },
            "core/paragraph": {
                "elements": {
                    "link": {
                        "color": {
                            "text": "var(--wp--preset--color--brand-orange)"
                        },
                        "typography": {
                            "textDecoration": "underline"
                        },
                        ":hover": {
                            "color": {
                                "text": "var(--wp--preset--color--brand-orange-600)"
                            },
                            "typography": {
                                "textDecoration": "none"
                            }
                        }
                    }
                }
            }
		},
		"elements": {
			"h1": {
				"spacing": {
					"margin": {
						"bottom": "2rem"
					}
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--roboto)",
					"fontSize": "3.5rem",
					"fontWeight": "800",
					"lineHeight": "var(--wp--custom--typography--line-height--tight)"
				}
			},
			"h2": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--inter)",
					"fontSize": "var(--wp--preset--font-size--4xl)",
					"fontWeight": "700",
					"lineHeight": "var(--wp--custom--typography--line-height--tight)"
				}
			},
			"h3": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--inter)",
					"fontSize": "var(--wp--preset--font-size--3xl)",
					"fontWeight": "600",
					"lineHeight": "var(--wp--custom--typography--line-height--tight)"
				}
			},
			"link": {
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--brand-orange-600)"
					},
					"typography": {
						"textDecoration": "none"
					}
				},
				"color": {
					"text": "var(--wp--preset--color--brand-orange)"
				},
				"typography": {
					"textDecoration": "underline"
				}
			}
		}
	}
}